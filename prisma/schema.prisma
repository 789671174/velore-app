generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  phone     String?
  date      String   // YYYY-MM-DD
  time      String   // HH:mm
  status    String   @default("pending") // statt enum
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date, time])
}

model Holiday {
  id     String @id @default(cuid())
  date   String @unique
  reason String?
}

model Settings {
  id            Int    @id @default(1)
  name          String @default("Velora")
  logoDataUrl   String?
  address       String?
  phone         String?
  email         String?
  website       String?
  slotMinutes   Int    @default(30)
  bufferMinutes Int    @default(0)
  hoursJson     String @default("{}")   // statt Json
}
